    "node-schedule": "^1.3.0",
    "nodemailer": "^4.4.1",
    "pg": "^7.4.1",
    "postgraphile": "^4.0.1",
    "postgraphile-plugin-connection-filter": "^1.0.0-beta.14",
    "request": "^2.88.0",
    "safe-eval": "^0.4.1",
    "save-file": "^1.2.1",
    "sendmail": "^1.4.1",
    "sharp": "^0.20.0",
    "socket.io": "^2.0.4",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
